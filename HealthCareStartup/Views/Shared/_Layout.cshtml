<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse text-white navbar-fixed-top" style="font-family:'Century Gothic'; font-size:1.2em; padding:1em;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HealthEase", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Medicines", "Index", "Medicines1")</li>
                    <li>@Html.ActionLink("Patient", "Index", "Patients")</li>
                    <li>@Html.ActionLink("Hospital", "Index", "Hospitals")</li>

                    <li>@Html.ActionLink("Doctor", "Index", "Doctors")</li>
                    <li>@Html.ActionLink("Online Order", "Index", "OnlineOrders")</li>
                    <li>@Html.ActionLink("Diagnosis", "Index", "DIagnosis")</li>
                   
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="font-family:'Century Gothic';">
        @RenderBody()
        <hr />
        <footer class="panel-footer navbar-fixed-bottom" style="background-color:#004D40;padding-top:1.2em; color:white; text-align:center;">
            <p>&copy; @DateTime.Now.Year - Wadiya Ali</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
